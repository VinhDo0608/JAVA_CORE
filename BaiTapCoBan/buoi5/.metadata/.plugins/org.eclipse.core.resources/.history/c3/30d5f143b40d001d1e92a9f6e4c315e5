package vn.devpro.baitap3;

public class Subject {
	private String code;
	private String name;
	private int credit;
	private double mark;
	
	public void display() {
		System.out.printf("%-11s %-25s %-10.1s %-7.2f%n", code, name, credit, mark);
	}
	
	public double markByCredit() {
		return this.credit * this.mark;
	}
	
	public Subject() {
		super();
	}



	public Subject(String code, String name, int credit, double mark) {
		super();
		this.code = code;
		this.name = name;
		this.credit = credit;
		this.mark = mark;
	}

	public String getCode() {
		return code;
	}

	public void setCode(String code) {
		this.code = code;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getCredit() {
		return credit;
	}

	public void setCredit(int credit) {
		this.credit = credit;
	}

	public double getMark() {
		return mark;
	}

	public void setMark(double mark) {
		this.mark = mark;
	}

	
	
	
}

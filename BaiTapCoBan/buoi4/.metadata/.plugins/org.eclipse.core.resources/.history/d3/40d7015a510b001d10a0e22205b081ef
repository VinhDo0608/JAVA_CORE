package vn.devpro.bai4.stringexam;

public class string_demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "Hello World";
		System.out.println("Char at 0: " + str.charAt(0));
		System.out.println("Index of 'o': " + str.indexOf('o'));
		System.out.println("Index of 'orl': " + str.indexOf("orl"));
		String str1 = str.concat(", I am very happy");
		System.out.println("Str1 = " + str1);
		String str2 = "hello world";
		if (str.compareTo(str2) > 0) {
			System.out.println("str lon hon (xep sau) str2");
		} else if (str.compareTo(str2) == 0){
			System.out.println("str giong str2");
		} else {
			System.out.println("str nho hon (xep truoc) str2");
		}
		
		String str3 = str.substring(0, 4);
		System.out.println("str3 = "+str3);
	}
}
